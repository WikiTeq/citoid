{
	"root": true,
	"extends": "wikimedia/server",
	"rules": {
		"camelcase": [
			"error",
			{
				"properties": "never"
			}
		],
		"computed-property-spacing": "off",
		"indent": [
			"off"
		],
		"max-statements-per-line": [
			"error",
			{
				"max": 2
			}
		],
		"no-underscore-dangle": "off",
		"no-unused-vars": [
			"error",
			{
				"args": "none"
			}
		],
		"no-shadow": "off",
		"node/no-deprecated-api": "off",
		"prefer-regex-literals": "off",
		"quote-props": "off",
		"space-in-parens": [
			"error",
			"never"
		]
	},
	"settings": {
		"jsdoc": {
			"preferredTypes": {
				"Application": "Application",
				"bluebird": "bluebird",
				"Citation": "Citation",
				"Request": "Request",
				"Router": "Router",
				"ServiceRunner": "ServiceRunner"
			}
		}
	}
}
